<%- include('header.ejs') %>
<center>
	<div class="jumbotron">
		<span>
			<h1>Hello, <%= userInfo.userid %>!</h1>
			<form method="POST" action="/logout">
				<button type="submit" class="btn">Logout</button>
			</form>
		</span>
	</div>
</center>
<div class="span9 offset1">
	<form class="well form-search" method="POST" action="/change_pass">
		<fieldset>
			<legend>Change Password</legend>
			<div class="control-group">
				<label class="control-label" for="password">New Password</label>
				<div class="controls">
					<input type="password" class="input-xlarge" name="password" id="password">
					<p class="help-block">Set a new password</p>
				</div>
			</div>
			<div class="form-actions">
				<button type="reset" class="btn">Cancel</button>
				<button type="submit" class="btn btn-primary">Save Changes</button>
			</div>
		</fieldset>
	</form>
	<form class="well form-search" method="POST" action="/update_user">
		<fieldset>
			<legend>User Info</legend>
			<div class="control-group">
				<label class="control-label" for="education">Education</label>
				<div class="controls">
					<input type="text" class="input-xlarge" name="education" id="education" value="<%= userInfo.education %>">
					<p class="help-block">The highest level of education you have completed (e.x. MS, BS, etc.)</p>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="jobExp">Job Expierence (years)</label>
				<div class="controls">
					<input type="text" class="input-xlarge" name="jobExp" id="jobExp" value="<%= userInfo.jobexp %>">
					<p class="help-block">The number of years of professional job expierence (e.x. 1.3, 0, etc.)</p>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="resume">Resume</label>
				<div class="controls">
					<textarea class="input-xlarge" name="resume" id="resume" style="width: 100%" rows="3"><%= userInfo.resume %></textarea>
					<p class="help-block">Your resume (max. 500 characters)</p>
				</div>
			</div>
			<div class="form-actions">
				<button type="reset" class="btn">Cancel</button>
				<button type="submit" class="btn btn-primary">Save Changes</button>
			</div>
		</fieldset>
	</form>
	<form class="well form-search" method="POST" action="/delete_user">
		<fieldset>
			<legend>Delete Account</legend>
			<div class="form-actions">
				<button type="submit" class="btn btn-danger">
					<i class="icon-warning-sign icon-white"></i>
					 Delete Account
				</button>
				<p>NOTE: This action cannot be undone!</p>
			</div>
		</fieldset>
	</form>
</div>
<%- include('footer.ejs') %>